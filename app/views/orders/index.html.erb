<h1>Your Orders</h1>

<% @orders.each do |order| %>
  <div>
    <p>Order ID: <%= order.id %></p>
    <p>Watch: <%= link_to order.watch.name, order.watch %></p>
    <p>Total Price: <%= number_to_currency(order.total_price) %></p>
    <p>Status: <%= order.status %></p>
    <%= link_to 'View Order', order %>
  </div>
<% end %>
