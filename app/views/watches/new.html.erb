<h1><%= action_name == 'new' ? 'New Watch' : 'Edit Watch' %></h1>

<%= form_with(model: @watch) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :brand %>
    <%= form.text_field :brand %>
  </div>
  <div>
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.label :condition %>
    <%= form.text_field :condition %>
  </div>
  <div>
    <%= form.label :image_url %>
    <%= form.text_field :image_url %>
  </div>
  <%= form.submit %>
<% end %>

<%= link_to 'Back', watches_path %>
